{
  "name": "voice-terminal",
  "version": "1.0.0",
  "description": "Voice-to-terminal menubar app for Kitty",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --mac",
    "build:dir": "electron-builder --mac --dir"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "menubar": "^9.5.0"
  },
  "build": {
    "appId": "com.voiceterminal.app",
    "productName": "Voice Terminal",
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "electron/**/*",
      "ui/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "config.json",
        "to": "config.json"
      }
    ]
  }
}
